%%FSH%% {# tag required #}
Instance: {{ setInstance("Instance-Procedure-" ~ instanceid) }}
InstanceOf: ProcedureUvIps
Title: "Procedure (IPS)"
Description: "Procedure"
Usage: #inline

* id = "{{ instanceid }}"

{# addign headers for HTML table #}
{{ addHEAD_tr() }}
{{ addHEAD_th("Procedure") }}
{{ addHEAD_th("Date") }}
{{ addHEAD_th("Reason") }}
{{ addHEAD_trend() -}}

{{ addHTML_tr() }}

* status = #completed

{# *** HTML td 1: code/display #}
{% if procedure.code is not empty %}

* code.coding[0] = {{ procedure.code.system }}#{{ procedure.code.code }} "{{ procedure.code.display }}"

{# make html with display and possible site #}
{% if procedure.code.preferredTerm is empty %}
{% set dp = procedure.code.display %}
{% else %}
* code.text = "{{ procedure.code.preferredTerm }}"
{% set dp = procedure.code.preferredTerm %}
{% endif %}

{% if procedure.site.code is not empty %}
{% set dp = dp ~ "<br/>" ~ procedure.site.display %}
{% endif %}

{{ addHTML_td(dp) }}

{% else %}
{{ addHTML_td("-") }}
{% endif %}

{# *** HTML td 2: date #}
{% if procedure.date is empty %}
* performedDateTime.extension.url = "http://hl7.org/fhir/StructureDefinition/data-absent-reason"
* performedDateTime.extension.valueCode = #unknown
{{ addHTML_td("?") }}
{% else %}
* performedDateTime = "{{ procedure.date }}"
{{ addHTML_tdnb(procedure.date|date('d-M-Y')) }}
{% endif %}

{# *** HTML td 3: reason #}
{% if procedure.reason.code is empty %}
{{ addHTML_td("-") }}
{% else %}
* reasonCode.coding[0] = {{ procedure.reason.system }}#{{ procedure.reason.code }} "{{ procedure.reason.display }}"
{{ addHTML_td(procedure.reason.display) }}
{% endif %}

{% if procedure.site.code is not empty %}
* site.coding[0] = {{ procedure.site.system }}#{{ procedure.site.code }} "{{ procedure.site.display }}"
{% endif %}

* subject = Reference(urn:uuid:{{ patient.instanceid }}) "{{ patient.name }}"

{{ addHTML_trend() -}}

{# populate .text #}
* text.status = #generated
* text.div = """
<div xmlns="http://www.w3.org/1999/xhtml">
<table class="hl7__ips">{{ emitHTML() | raw }}</table>
</div>
"""

%%HEAD%% {# tag required, content below maybe emtpy #}
{{ emitHEAD() | raw }}

%%HTML%% {# tag required, content below maybe emtpy #}
{{ emitHTML() | raw }}